@model List<YummyProject.Models.Service>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<br />
<h3 style="text-align:center">Services Page</h3>
<hr />
<table class="table table-bordered table-hover">

    <tr>
        <th>Icon</th>
        <th>Title</th>
        <th>Description</th>
        <th>Delete</th>
        <th>Update</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td><img src="@item.Icon" style="width:90px;height:110px" /></td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td><a class="btn btn-outline-danger" href="/Services/DeleteServices/@item.ServiceId">Delete</a></td>
            <td><a class="btn btn-outline-info" href="/Services/UpdateServices/@item.ServiceId">Update</a></td>
        </tr>
    }

</table>
<div style="text-align:center">
    <div class="text-danger">@TempData["CountError"]</div>
    <div style="text-align:center">
        <a class="btn btn-outline-warning" href="/Services/AddServices">Add New Services</a>
    </div>
    <br />

</div>


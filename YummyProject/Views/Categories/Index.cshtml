@model List<YummyProject.Models.Category>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<h3 style="text-align:center">Categories</h3>
<hr />


<table class="table table-bordered table-hover">


    <tr>
        <th>#</th>
        <th>Category Name</th>
        <th>Delete</th>
        <th>Update</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CategoryId</td>
            <td>@item.CategoryName</td>

            <td><a class="btn btn-outline-danger" href="/Categories/Delete/@item.CategoryId">Delete</a></td>
            <td><a class="btn btn-outline-primary" href="/Categories/Update/@item.CategoryId">Update</a></td>
        </tr>
    }
    <div class="text-danger">@TempData["categoryDeleteError"]</div>




</table>

<br />

<div style="text-align:center">
    <a class="btn btn-outline-success" href="/Categories/CategoriesAdd">Add New Category</a>
</div>


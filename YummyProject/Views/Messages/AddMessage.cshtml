@model YummyProject.Models.Message



@{
    ViewBag.Title = "AddMessage";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>AddMessage</h2>
<form method="post">

    <label>Ad</label>
    <br />
    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.Name, "", new { @class = "text-danger" })

    <br />

    <label>Eposta</label>
    <br />
    @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.Email, "", new { @class = "text-danger" })


    <br />


    <label>Mesajın Konusu</label>
    <br />
    @Html.TextBoxFor(x => x.Subject, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.Subject, "", new { @class = "text-danger" })



    <br />


    <label>Mesajınız</label>
    <br />
    @Html.TextAreaFor(x => x.MessageContent, 5, 1, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.MessageContent, "", new { @class = "text-danger" })


    <br />


    <button class="btn btn-outline-success">Ekle</button>
</form>


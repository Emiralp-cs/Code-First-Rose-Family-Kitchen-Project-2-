@model YummyProject.Models.Message


@{
    ViewBag.Title = "UpdateMessage";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<br />
<h3 style="text-align:center">Update Message</h3>

<hr />



<form method="post">
    @Html.HiddenFor(x => x.MessageId)
    <label>Name</label>
    <br />
    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.Name, "", new { @class = "text-danger" })
    <br />

    <label>E-Mail</label>
    <br />
    @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.Email, "", new { @class = "text-danger" })


    <br />


    <label>Subject</label>
    <br />
    @Html.TextBoxFor(x => x.Subject, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.Subject, "", new { @class = "text-danger" })



    <br />


    <label>Message</label>
    <br />
    @Html.TextAreaFor(x => x.MessageContent, 5, 1, new { @class = "form-control" })
    @Html.ValidationMessageFor(x => x.MessageContent, "", new { @class = "text-danger" })




    <br />
    <div style="text-align:center">
        <button class="btn btn-outline-success">Update Message</button>
    </div>
    <br />
</form>


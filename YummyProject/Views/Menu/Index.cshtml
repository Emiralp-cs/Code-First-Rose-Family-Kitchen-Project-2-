@model List<YummyProject.Models.Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<br />
<h3 style="text-align:center">Menu Page</h3>


<table class="table table-bordered table-hover">


    <tr>
        <th>#</th>
        <th>Image</th>
        <th>Product Name</th>
        <th>Ingredients</th>
        <th>Price</th>
        <th>Category</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ProductId</td>
            <td><img src="@item.ImageUrl" style="width:70px;height:70px" /></td>
            <td>@item.ProductName</td>
            <td>@item.Ingredients</td>
            <td>@item.Price</td>
            <td>@item.Category.CategoryName</td>
            <td><a class="btn btn-outline-danger" href="/Menu/DeleteProduct/@item.ProductId">Delete</a></td>
            <td><a class="btn btn-outline-primary" href="/Menu/UpdateProduct/@item.ProductId">Update</a></td>
        </tr>
    }




</table>

<br />
<div style="text-align:center">
    <a class="btn btn-outline-success" href="/Menu/AddProduct">Add New Product</a>
</div>
<br />


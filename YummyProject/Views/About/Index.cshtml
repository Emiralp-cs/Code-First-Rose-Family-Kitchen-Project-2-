@model List<YummyProject.Models.About>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<br />
<h3 style="text-align:center">About Page</h3>
<hr />
<table class="table table-bordered table-hover">

    <tr>

        <th>1.</th>
        <th>2.</th>
        <th>3.</th>
        <th>Description</th>
        <th>About Me Image</th>
        <th>Video Image</th>
        <th>Video URL</th>
        <th>Phone Number</th>
        <th>Delete</th>
        <th>Update</th>

    </tr>

    @foreach (var item in Model)
    {




        <tr>

            <td>@item.Item1</td>
            <td>@item.Item2</td>
            <td>@item.Item3</td>
            <td>@item.Description</td>
            <td><img src="@item.ImageUrl2" style="width:70px;height:70px" /></td>
            <td><img src="@item.ImageUrl" style="width:70px;height:70px"/></td>
            <td>@item.VideoUrl</td>
            <td>@item.PhoneNumber</td>
            <td><a href="/About/AboutDelete/@item.AboutId" class="btn btn-outline-danger">Delete</a></td>
            <td><a href="/About/AboutUpdate/@item.AboutId" class="btn btn-outline-primary">Update</a></td>
        </tr>


    }
</table>

<br />

<div class="text-danger">@TempData["Error"]</div>
<div style="text-align:center">
    <a class="btn btn-outline-success" href="/About/AboutAdd">Add New About</a>
</div>




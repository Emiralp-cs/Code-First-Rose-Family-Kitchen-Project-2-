﻿@model List<YummyProject.Models.Chef>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int tutan = 0;
}

<h3 style="text-align:center">Chef Social Medias</h3>

<hr />

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.2/font/bootstrap-icons.min.css">
<table class="table table-bordered table-hover">
    <tr>
        <th>Image</th>
        <th>Name</th>

    </tr>



    @foreach (var item in Model)
    {
        if (tutan == item.ChefId)
        {
            continue;
        }






        <tr>
            <td><img src="@item.ImageUrl" style="width:60px;height:40px"/></td>
            <td>@item.ChefName</td>
            <td><a href="/ChefSocialMedias/Deneme/@item.ChefId" class="btn btn-outline-info">Edit</a></td>
            

        </tr>

        tutan = item.ChefId;






    }
</table>

<div class="text-danger">@TempData["Error"]</div>




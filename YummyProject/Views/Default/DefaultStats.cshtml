



<div class="row gy-4">

    <div class="col-lg-3 col-md-6">
        <div class="stats-item text-center w-100 h-100">
            <span class="p-0">@ViewBag.SoupCount</span>
            <p>Number of product types</p>
        </div>
    </div><!-- End Stats Item -->

    <div class="col-lg-3 col-md-6">
        <div class="stats-item text-center w-100 h-100">
            <span class="p-0">@ViewBag.MostExpensive</span>
            <p>Most Expensive Product</p>
        </div>
    </div><!-- End Stats Item -->

    <div class="col-lg-3 col-md-6">
        <div class="stats-item text-center w-100 h-100">
            <span class="p-0">@ViewBag.CheapestPrice</span>
            <p>Least Expensive Product</p>
        </div>
    </div><!-- End Stats Item -->

    <div class="col-lg-3 col-md-6">
        <div class="stats-item text-center w-100 h-100">
            <span class="p-0">@ViewBag.AvgPrice.ToString("N")</span>
            <p>Average product price</p>
        </div>
    </div><!-- End Stats Item -->

</div>


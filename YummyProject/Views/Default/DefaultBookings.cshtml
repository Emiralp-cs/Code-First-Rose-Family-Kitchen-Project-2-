@model YummyProject.Models.Booking


<section id="book-a-table" class="book-a-table section">


    <div class="container section-title" data-aos="fade-up">
        <h2>Book A Table</h2>
        <p><span>Book Your</span> <span class="description-title">Stay With Us<br></span></p>
    </div>

    <div class="container">

        <div class="row g-0" data-aos="fade-up" data-aos-delay="100">

            <div class="col-lg-4 reservation-img" style="background-image: url(/Templates/yummy-red-1.0.0/assets/img/reservation.jpg);"></div>

            <div class="col-lg-8 d-flex align-items-center reservation-form-bg" data-aos="fade-up" data-aos-delay="200">
                <form action="/Default/DefaultBookings" method="post">
                    <div class="row gy-4">
                        <div class="col-lg-4 col-md-6">
                            <input type="text" name="Name" class="form-control" id="name" placeholder="Your Name" required="">
                        </div>
                        <div class="col-lg-4 col-md-6">
                            <input type="email" class="form-control" name="Email" id="email" placeholder="Your Email" required="">
                        </div>
                        <div class="col-lg-4 col-md-6">
                            <input type="text" class="form-control" name="PhoneNumber" minlength="3" id="phone" placeholder="Your Phone" required="">
                        </div>
                        <div class="col-lg-4 col-md-6">
                            <input type="date" name="BookingDate" class="form-control" id="date"min="2025-01-01" max="2025-12-31" placeholder="Date" required="">
                        </div>

                        <div class="col-lg-4 col-md-6">
                            <input type="number" class="form-control" name="PersonCount" id="people" placeholder="# of people" required="">
                        </div>
                    </div>

                    <div class="form-group mt-3">
                        <textarea class="form-control" name="MessageContent" rows="5" placeholder="Your Message"></textarea>
                    </div>

                    <div class="text-center mt-3">
                        <div class="text-danger">@TempData["Error"]</div>
                        <button class="btn btn-outline-secondary" type="submit">Book a Table</button>
                    </div>
                </form>
            </div><!-- End Reservation Form -->

        </div>

    </div>

</section>

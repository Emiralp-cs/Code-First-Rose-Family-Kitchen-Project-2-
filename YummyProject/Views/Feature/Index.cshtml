@model List<YummyProject.Models.Feature>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}
<br />
<h3 style="text-align:center">Features Page</h3>
<hr />
<table class="table table-bordered table-hover">
    <tr>
        <th>Image</th>
        <th>Title</th>
        <th>Description</th>
        <th>Delete</th>
        <th>Update</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td><img src="@item.ImageUrl" style="width:75px;height:75px" /></td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td><a href="/Feature/DeleteFeature/@item.FeatureId" class="btn btn-outline-danger">Delete</a></td>
            <td><a href="/Feature/UpdateFeature/@item.FeatureId" class="btn btn-outline-info">Update</a></td>
        </tr>
    }
</table>
<br />

<div style="text-align:center">
    <a href="/Feature/AddFeature" class="btn btn-outline-primary">Add</a>
</div>
<br />